<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mfm_2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fragment.budget.BudgetDetailActivity"></activity>
        <activity
            android:name=".fragment.transaction.EditTransactionActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".fragment.transaction.AddTransactionActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".fragment.account.EditAccountActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".fragment.budget.BudgetingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".fragment.budget.edit.EditBudgetActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".TestActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>